{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node server.js",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "envVars": {
      "SKIP_MONITORING": {
        "description": "Skip monitoring scheduler to prevent deployment issues",
        "default": "true"
      }
    }
  }
}